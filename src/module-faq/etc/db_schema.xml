<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="magespices_faq_question"  comment="Faq Question Table">
		<column name="entity_id" xsi:type="int"  nullable="false" identity="true" unsigned="true" comment="Entity Id" />
		<column name="question" xsi:type="text" nullable="false" comment="Question" />
		<column name="answer" xsi:type="text" nullable="false" comment="Answer" />
		<column name="sort_order" xsi:type="int" nullable="false" comment="Sort Order" />
		<column name="product_id" xsi:type="text" nullable="false" comment="Product ID" />
		<constraint referenceId="PRIMARY" xsi:type="primary">
			<column name="entity_id"/>
		</constraint>
	</table>
</schema>
