<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magespices\Faq\Block\Product\Tab\Faq" name="product.info.faq" as="faq" template="Magespices_Faq::product/view/faq.phtml" group="detailed_info" ifconfig="faq/general/enabled">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">FAQ</argument>
                    <argument name="sort_order" xsi:type="string">20</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>